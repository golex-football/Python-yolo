# ===== CPU caps =====
MOONALT_CPU_THREADS=6         # threads for BLAS/OMP/NumExpr fallbacks
MOONALT_CPU_AFFINITY=0-11     # pin to these CPU cores (optional)
MOONALT_NICE=5                # lower priority to keep system responsive

# OpenCV + BLAS threading (keep single-threaded OpenCV)
OPENCV_NUM_THREADS=0
OMP_NUM_THREADS=6
OPENBLAS_NUM_THREADS=6
MKL_NUM_THREADS=6
NUMEXPR_NUM_THREADS=6

# ===== GPU caps =====
MOONALT_YOLO_DEVICE=cuda:0    # which GPU
MOONALT_YOLO_HALF=1           # fp16 on GPU
MOONALT_YOLO_IMGSZ=960        # inference size (832/896/960 are good)
MOONALT_TORCH_VRAM_FRACTION=0.60  # % of VRAM this process may use

# ===== Viewer / I/O (optional) =====
MOONALT_VIEWER_SAVE_EVERY=10
